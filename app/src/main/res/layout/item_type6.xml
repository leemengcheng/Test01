<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_type6_ll"
    android:layout_marginBottom="2.5dp"
    android:layout_marginTop="2.5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="2.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
   >

    <ImageView
        android:id="@+id/item_type6_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />

    <TextView
        android:id="@+id/item_type6_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textColor="@color/holo_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/item_type6_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="11.5dp"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:layout_below="@id/item_type6_text1"
        android:textColor="@color/holo_dark"
        android:textSize="15sp" />


</RelativeLayout>